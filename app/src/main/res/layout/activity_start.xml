<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_700">

    <LinearLayout
        android:id="@+id/search_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:text="@string/search_over"
            android:textColor="@color/transparent_white_strong"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_in_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textColor="@color/transparent_white_strong"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/search_in_chevron"
            android:layout_width="14dp"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:background="@drawable/selector_ic_up_down" />

    </LinearLayout>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/search_in_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_in_layout"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/chk_revival"
            style="@style/DigestTitleBtn"
            android:text="@string/digest_revival_songs" />

        <TextView
            android:id="@+id/chk_maykop"
            style="@style/DigestTitleBtn"
            android:text="@string/digest_maykop" />

    </org.apmem.tools.layouts.FlowLayout>

    <android.support.v4.widget.Space
        android:id="@+id/space_on_autocomplete_top"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/search_in_container" />

    <MultiAutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space_on_autocomplete_top"
        android:background="@color/transparent_white"
        android:hint="@string/search_by_"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="40dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/hint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/autoCompleteTextView"
        android:onClick="onClick"
        android:padding="8dp"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/autoCompleteTextView"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/app_name"
        android:textColor="@color/light_blue_400"
        android:textSize="52sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/autoCompleteTextView" />

</RelativeLayout>
